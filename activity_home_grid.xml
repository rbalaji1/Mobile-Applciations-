<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uncc.abilash.edu.HomeGrid">

    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:text="View Appliances"
        android:id="@+id/button"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:text="Manage Appliances"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:text="View Current Schedule"
        android:id="@+id/button7"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:text="Manage Current Schedule"
        android:id="@+id/button8"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Request Schedule from Servers"
        android:id="@+id/button10"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
