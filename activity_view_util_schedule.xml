<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uncc.abilash.edu.ViewUtilSchedule">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button32"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:maxLines = "1000"
        android:scrollbars="vertical"
        android:text="New Text"
        android:id="@+id/textView26"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button38" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Accept Utility Schedule"
        android:id="@+id/button34"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button32" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send to Home"
        android:id="@+id/button38"
        android:layout_above="@+id/button34"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
