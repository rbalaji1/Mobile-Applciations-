<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uncc.abilash.edu.AddAppliance">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Appliance name:"
        android:id="@+id/textView19"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:gravity="center_vertical|right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="power consumption:"
        android:id="@+id/textView20"
        android:textSize="20sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Start time:"
        android:id="@+id/textView21"
        android:textSize="20sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Deadline:"
        android:id="@+id/textView22"
        android:textSize="20sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/textView21"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Runtime:"
        android:id="@+id/textView23"
        android:textSize="20sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/textView22"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:layout_above="@+id/textView20"
        android:layout_toRightOf="@+id/textView19" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText13"
        android:layout_below="@+id/editText12"
        android:layout_toRightOf="@+id/textView20" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText14"
        android:layout_below="@+id/editText13"
        android:layout_toRightOf="@+id/textView21" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText15"
        android:layout_below="@+id/editText14"
        android:layout_alignLeft="@+id/editText14" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText16"
        android:layout_below="@+id/editText15"
        android:layout_alignLeft="@+id/editText15" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/button23"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView24"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="reset"
        android:id="@+id/button24"
        android:layout_alignTop="@+id/button23"
        android:layout_toRightOf="@+id/button23" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/button25"
        android:layout_alignTop="@+id/button24"
        android:layout_toRightOf="@+id/button24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="jobtype"
        android:id="@+id/textView28"
        android:textSize="20sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/editText20"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText18"
        android:layout_alignTop="@+id/textView28"
        android:layout_toRightOf="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="current starttime"
        android:id="@+id/textView29"
        android:textSize="20sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/textView23"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="current endtime"
        android:id="@+id/textView24"
        android:textSize="20sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/textView29"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText19"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/textView29"
        android:layout_toRightOf="@+id/textView29" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText20"
        android:layout_alignBottom="@+id/textView24"
        android:layout_toRightOf="@+id/textView24" />


</RelativeLayout>