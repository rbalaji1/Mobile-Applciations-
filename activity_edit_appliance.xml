<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uncc.abilash.edu.EditAppliance">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Appliance name:"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:gravity="center_vertical|right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Power Consumption:"
        android:id="@+id/textView12"
        android:textSize="20sp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toRightOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Start Time:"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:layout_below="@+id/textView12"
        android:layout_toRightOf="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="deadline"
        android:id="@+id/textView14"
        android:textSize="20sp"
        android:layout_below="@+id/editText9"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:layout_alignTop="@+id/textView14"
        android:layout_toRightOf="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Runtime"
        android:id="@+id/textView15"
        android:textSize="20sp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText11"
        android:layout_below="@+id/textView14"
        android:layout_toRightOf="@+id/textView15" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button20"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="73dp" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button21"
        android:layout_alignBottom="@+id/button20"
        android:layout_toRightOf="@+id/button20" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button22"
        android:layout_alignBottom="@+id/button21"
        android:layout_toRightOf="@+id/button21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="name"
        android:id="@+id/textView16"
        android:layout_above="@+id/editText8"
        android:layout_toRightOf="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button22"
        android:gravity="center|center_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="no"
        android:id="@+id/textView17"
        android:scrollbars = "vertical"
        android:textSize="20sp"
        android:layout_below="@+id/button20"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="job type"
        android:id="@+id/textView30"
        android:textSize="20sp"
        android:layout_below="@+id/editText11"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText21"
        android:layout_below="@+id/editText11"
        android:layout_alignLeft="@+id/editText11" />

</RelativeLayout>
