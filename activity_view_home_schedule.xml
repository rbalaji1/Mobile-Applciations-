<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uncc.abilash.edu.ViewHomeSchedule">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/button31"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines = "1000"
        android:scrollbars="vertical"
        android:text="New Text"
        android:id="@+id/textView25"

        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button37" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Accept Home Schedule"
        android:id="@+id/button33"
        android:layout_above="@+id/button31"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send to utility"
        android:id="@+id/button37"
        android:layout_above="@+id/button33"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
